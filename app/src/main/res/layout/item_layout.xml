<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="count"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.7dp"
        android:layout_marginRight="0.7dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="@string/section"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@{count}" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2"
            android:background="@drawable/bg_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:text="@string/kotlin"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="@string/java"
                android:alpha="0.5"
                android:background="@drawable/bg_rounded_yello" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:background="@drawable/dummy"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2"
            android:background="@drawable/bg_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:text="@string/ui_ux"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_purple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:text="@string/xml"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_green" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>